{
  "name": "@art_style666/hi-light",
  "version": "1.0.1",
  "description": "HiLight WebSocket bridge channel plugin for OpenClaw",
  "type": "module",
  "main": "dist/index.js",
  "exports": {
    ".": "./dist/index.js"
  },
  "files": [
    "dist",
    "openclaw.plugin.json",
    "README.md"
  ],
  "scripts": {
    "build": "esbuild index.ts --bundle --format=esm --platform=node --target=node18 --packages=external --outfile=dist/index.js",
    "test": "vitest run",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "ws": "^8.18.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "esbuild": "^0.25.0",
    "vitest": "^4.0.18"
  },
  "openclaw": {
    "extensions": [
      "dist/index.js"
    ],
    "channel": {
      "id": "hi-light",
      "label": "HiLight",
      "selectionLabel": "HiLight WebSocket Bridge",
      "docsPath": "/channels/hi-light",
      "docsLabel": "hi-light",
      "blurb": "HiLight â€” WebSocket bridge channel, connects to external WS server.",
      "order": 80
    }
  }
}
